<h1><%= @project.title %></h1>

<a href="/home/<%= @project.id %>/edit">Edit Project</a>
<br><br>
<form action="/home/<%= @project.id %>/delete" method="post">
  <input type="hidden" name="_method" value="delete">
  <button type="submit" class="btn">Delete Project</button>
</form>


<% if @volunteers.any? %>
<h2>Volunteers</h2>
<ul>
  <% @volunteers.each do |volunteer| %>
  <li><a href="/home/<%= @project.id %>/volunteer/<%= volunteer.id %>"><%= volunteer.name %></a></li>
  <% end %>
</ul>
<% else %>
<p>There are currently no Volunteers to display.</p>
<% end %>

<form action="/home/<%= @project.id %>/volunteer" method="post">
    <input name="name" type="text">
  <button type="submit" class="btn">Add Volunteer</button>
</form>


<br>
<a href="/home">Return Home</a>
